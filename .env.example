# Environment variables template for Civilyst
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL="postgresql://postgres.your_project_id:[YOUR_PASSWORD]@aws-0-us-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your_project_id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Mapbox
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token_here

# Upstash Redis (optional - for caching)
UPSTASH_REDIS_REST_URL=https://your_redis_url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Uploadthing (for file uploads)
UPLOADTHING_SECRET=sk_live_your_uploadthing_secret_key_here
UPLOADTHING_APP_ID=your_uploadthing_app_id_here

# Resend (for emails)
RESEND_API_KEY=re_your_resend_api_key_here

# Inngest (for background jobs)
INNGEST_EVENT_KEY=your_inngest_event_key_here
INNGEST_SIGNING_KEY=signkey_your_inngest_signing_key_here

# LaunchDarkly (for feature flags)
LAUNCHDARKLY_SDK_KEY=sdk_your_launchdarkly_key_here

# AI Services (for content moderation and enhancement)
OPENAI_API_KEY=sk_your_openai_api_key_here
GOOGLE_CLOUD_VISION_API_KEY=your_google_cloud_vision_api_key_here
AZURE_COGNITIVE_SERVICES_KEY=your_azure_cognitive_services_key_here
AZURE_COGNITIVE_SERVICES_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Development/Production Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Webhook secrets (add as you integrate services)
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here